<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg"
    tools:context=".PlayerActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/LYOUT1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="2dp"
        android:background="@drawable/bg_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0">


        <TextView
            android:id="@+id/userName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="qwe qwerty qwertyu ddjj"
            android:fontFamily="serif"
            android:onClick="test"
            android:paddingTop="5dp"
            android:paddingBottom="8dp"
            android:minWidth="100dp"
            android:maxWidth="200dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:elevation="4dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:background="@drawable/bg_name"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/roomCode"
            />
        <TextView
            android:id="@+id/roomCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:shadowRadius="5"
            android:text="123456"
            android:background="@drawable/bg_code"
            android:elevation="4dp"
            android:fontFamily="times"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/theme_color"
            android:textSize="13sp"
            android:textStyle="bold|italic"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/peers"
            />
        <ImageView
            android:layout_width="35dp"
            android:layout_height="0dp"
            android:onClick="toogleLayout"
            app:layout_constraintDimensionRatio="1"
            android:background="@drawable/bg_peer"
            android:src="@drawable/baseline_chat_bubble_24"
            android:padding="8dp"
            android:layout_marginEnd="25dp"
            android:id="@+id/peers"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/refresh"/>
        <ImageView
            android:layout_width="10dp"
            android:layout_height="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/bg_peer"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintHorizontal_bias="1"
            android:src="@drawable/baseline_circle_24"
            android:id="@+id/circle"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/peers"
            app:layout_constraintLeft_toLeftOf="@id/peers"
            app:layout_constraintTop_toTopOf="@id/peers"
            app:layout_constraintRight_toRightOf="@id/peers"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="0dp"
            android:onClick="refreshLayout"
            app:layout_constraintDimensionRatio="1"
            android:background="@drawable/bg_peer"
            android:src="@drawable/refresh"
            android:padding="8dp"
            android:layout_marginEnd="25dp"
            android:id="@+id/refresh"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/playerLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintDimensionRatio="1.77"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LYOUT1"
        app:layout_constraintBottom_toBottomOf="parent">
        <com.google.android.exoplayer2.ui.StyledPlayerView
            android:id="@+id/player_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/black"
            android:visibility="gone"
            app:controller_layout_id="@layout/custom_controls"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:resize_mode="fit"
            app:show_buffering="when_playing"
            app:use_controller="true"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rightBox"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_right_box"
            android:clickable="false"
            android:visibility="gone"
            app:layout_constraintDimensionRatio=".88"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent=".5">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rightSeekTXT"
                android:text="+10"
                android:visibility="gone"
                android:textColor="@color/white"
                android:fontFamily="serif"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/arrow1"
                app:layout_constraintTop_toTopOf="parent"/>


            <ImageView
                android:id="@+id/arrow1"
                android:layout_width="24dp"
                android:layout_height="0dp"
                android:src="@drawable/right_arrow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/arrow2"
                android:layout_width="24dp"
                android:layout_height="0dp"
                android:src="@drawable/right_arrow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toRightOf="@+id/arrow1"
                app:layout_constraintRight_toRightOf="@id/arrow1"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/arrow3"
                android:layout_width="24dp"
                android:layout_height="0dp"
                android:src="@drawable/right_arrow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toRightOf="@+id/arrow2"
                app:layout_constraintRight_toRightOf="@id/arrow2"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/leftBox"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_left_box"
            android:clickable="false"
            android:visibility="gone"
            app:layout_constraintDimensionRatio=".88"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent=".5">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/leftSeekTXT"
                android:text="-10"
                android:visibility="gone"
                android:textColor="@color/white"
                android:fontFamily="serif"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/Larrow1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/Larrow1"
                android:layout_width="24dp"
                android:layout_height="0dp"
                android:src="@drawable/left_arrow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/Larrow2"
                android:layout_width="24dp"
                android:layout_height="0dp"
                android:src="@drawable/left_arrow"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintLeft_toLeftOf="@id/Larrow1"
                app:layout_constraintRight_toLeftOf="@id/Larrow1"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/Larrow3"
                android:layout_width="24dp"
                android:layout_height="0dp"
                android:src="@drawable/left_arrow"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintLeft_toLeftOf="@id/Larrow2"
                app:layout_constraintRight_toLeftOf="@id/Larrow2"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/addMediaLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="OFFLINE"
                android:onClick="offlineAddLayout"
                android:id="@+id/offlineBtn"
                android:textAlignment="center"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintWidth_percent=".5"
                android:shadowRadius="5"
                android:background="@drawable/bg_selected"
                android:elevation="4dp"
                android:fontFamily="times"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/theme_color"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ONLINE"
                android:id="@+id/onlineBtn"
                android:onClick="onlineAddLayout"
                android:textAlignment="center"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintWidth_percent=".5"
                android:shadowRadius="5"
                android:background="@drawable/bg_not_selected"
                android:elevation="4dp"
                android:fontFamily="times"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/white_200"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/offlineMediaLayout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/offlineBtn">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="0dp"
                    android:id="@+id/imgAddOfflineMedia"
                    android:onClick="selectVideo"
                    app:layout_constraintDimensionRatio="1"
                    android:background="@drawable/bg_add"
                    android:src="@drawable/add_movie"
                    android:padding="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Media: index.mp4"
                    android:visibility="gone"
                    android:id="@+id/currentMediaTxt"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintVertical_bias="0"
                    android:padding="5dp"
                    android:textSize="11sp"
                    android:fontFamily="@font/istok_web_regular"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Play Media"
                    android:onClick="startSyncPlay"
                    android:visibility="gone"
                    android:id="@+id/playOffileVideo"
                    android:textAlignment="center"
                    app:layout_constraintVertical_bias="0"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_selected"
                    android:fontFamily="times"
                    android:padding="5dp"
                    android:textColor="@color/theme_color"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imgAddOfflineMedia"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/onlineMediaLayout"
                android:background="@color/theme_color"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/offlineBtn">

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playBTN"
            app:layout_constraintHorizontal_bias="0"
            android:text="Play"
            android:visibility="gone"
            android:onClick="playVideo"
            android:textColor="@color/white"
            android:background="@color/theme_color"
            android:textSize="13sp"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/partyLayout"
        android:visibility="visible"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/playerLayout"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/peerLayout"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewUsers"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_chats"
                android:layout_margin="2dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/peer_bottom_bar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                app:layout_constraintVertical_bias="1"
                android:id="@+id/peer_bottom_bar"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/micBtn"
                    android:onClick="mic"
                    android:elevation="4dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/bg_call"
                    android:padding="10dp"
                    android:src="@drawable/mic_on"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/callBtn"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/callBtn"
                    android:elevation="4dp"
                    android:layout_margin="2dp"
                    android:onClick="endCall"
                    android:background="@drawable/bg_call"
                    android:padding="10dp"
                    android:src="@drawable/call_end"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/deafenBtn"
                    android:elevation="4dp"
                    android:onClick="deafen"
                    android:layout_margin="5dp"
                    android:background="@drawable/bg_call"
                    android:padding="10dp"
                    android:src="@drawable/deafen_off"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintLeft_toRightOf="@id/callBtn"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/chatLayout"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewChats"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/bg_chats"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/bottomBar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/bottomBar"
                app:layout_constraintWidth_percent=".98"
                app:layout_constraintVertical_bias="1"
                android:layout_marginBottom="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/bottomBar_edit"
                    android:layout_marginEnd="1dp"
                    android:background="@drawable/bg_bottombar"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintVertical_bias="1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/send"
                    app:layout_constraintTop_toTopOf="parent">

                    <EditText
                        android:id="@+id/messageTXT"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_send_edit"
                        android:fontFamily="@font/istok_web_regular"
                        android:hint="Send a message"
                        android:importantForAutofill="no"
                        android:inputType="textLongMessage|textMultiLine|textCapSentences"
                        android:lineSpacingMultiplier=".8"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/layoutPick"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="RtlSymmetry,TextFields" />
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/layoutPick"
                        app:layout_constraintHorizontal_bias="1"
                        app:layout_constraintVertical_bias="1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="0dp"
                            app:layout_constraintDimensionRatio="1"
                            android:padding="10dp"
                            android:id="@+id/camera"
                            android:onClick="openCamera"
                            android:src="@drawable/camera"
                            app:layout_constraintHorizontal_bias="1"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            tools:ignore="UsingOnClickInXml" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1"
                    android:paddingStart="10dp"
                    android:paddingEnd="8dp"
                    android:id="@+id/send"
                    android:onClick="sendMessage"
                    android:background="@drawable/bg_send"
                    android:src="@drawable/ic_baseline_send_24"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintVertical_bias="1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:ignore="UsingOnClickInXml" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>











</androidx.constraintlayout.widget.ConstraintLayout>